doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        title Maglio Made
        link(rel="stylesheet", href="../css/mm.min.css")
        script(defer="defer", src="../js/libs/jquery.min.js")
        script(defer="defer", src="../js/childBrains.min.js")
    body(id="projectpage")
        header
            div
                a(href="../index.html")
                    img(src="../images/magliomade-logo-icon.svg", alt="logo")
        div.title
            h1 #{page.title}
            h2 #{page.description}
        section.pictures
            div
                each pic in page.images
                    div.projectImage
                        img(src="../" + page.baseURL + "medium/" + pic.src, alt=pic.hoverTitle)
                        - console.log(page.baseURL + ": " + pic.src)
                        div
                            if ( (pic.url).match(/\.jpg/g) != null )
                                a(href="../" + page.baseURL + "full/" + pic.url)
                                    h2 #{pic.hoverTitle}
                                    p #{pic.hoverSubtitle}
                            else
                                a(href=pic.url)
                                    h2 #{pic.hoverTitle}
                                    p #{pic.hoverSubtitle}
                            
        div.backNav
            a(href="../index.html#work", rel="prev") <img src="../images/back-arrow.svg" alt="Back Arrow" />Back to Work
        footer
            div
                img(src="../images/footerLogo.svg", alt="Footer Logo")
                p Copyright &copy; <span id="copyrightYear">2013</span> Mitchell Maglio <span>|</span> special thanks to Jim Holby